val Functions$Function3<SwitchItem, SwitchItem, NumberItem, Void> adjustLightState =  [SwitchItem switchLightOnMotion, SwitchItem switchMotionState, NumberItem itemIluminationState |
    
	var shouldLightTurnOn =  (hue_sala_jantar_switch.state == OFF) &&
							 (SunLight.state == OFF || itemIluminationState.state == 0) &&
							 (switchLightOnMotion.state == ON) &&
							 (switchMotionState.state == ON) &&
							 (itemIluminationState.state < 9)
							 
							 
	var shouldLightTurnOff = (switchLightOnMotion.state == ON) &&
							 (hue_sala_jantar_switch.state == ON) &&
							 (switchMotionState.state == OFF)
							 
	logInfo("motion.rules", "shouldLightTurnOn: "  + shouldLightTurnOn);
	logInfo("motion.rules", "shouldLightTurnOff: " + shouldLightTurnOff);
	
	if (shouldLightTurnOn)
	{
		sendCommand(hue_sala_jantar_switch, ON)
	}
	
	if (shouldLightTurnOff)
	{
		sendCommand(hue_sala_jantar_switch, OFF)
	}
]


rule "Motion Sensor - Sala de Jantar"
when
    Item motion_sensor_sala_jantar_motion changed or
	Item motion_sensor_sala_jantar_illumination changed
then
	logInfo("motion.rules", "movimento - sala de jantar.");
	
	adjustLightState.apply(EnableLightOnMotion_SalaDeJantar, motion_sensor_sala_jantar_motion, motion_sensor_sala_jantar_illumination);
end


